{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: MCP Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "FASTMCP_DEBUG": "true",
                "FASTMCP_LOG_LEVEL": "DEBUG"
            }
        },
        {
            "name": "Python: E2B Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["-s", "tests/unit/services/test_e2b.py"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env.test",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}